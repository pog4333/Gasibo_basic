<?xml version="1.0" ?>

<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find robot_description)/urdf/robot.gazebo"/>
    <!-- Laser scan -->
    <joint name="joint_laser_scan_chassis" type="fixed">
        <origin rpy="0 0 0" xyz="0.8 0 0.3" />
        <child link="link_laser_scan" />
        <parent link="link_chassis" />
        <joint_properties damping="1.0" friction="1.0" />
    </joint>
    <link name="link_laser_scan">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <mass value="0.5" />
            <inertia ixx="0.000252666666667" ixy="0" ixz="0" iyy="0.000252666666667" iyz="0" izz="0.0005"/>
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.15" length="0.20"/>
            </geometry>
            <material name="Red">
                <color rgba="0.7 0.1 0.1 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder radius="0.15" length="0.20"/>
            </geometry>
        </collision>
    </link>   
     
    
    <!-- Link - chassis -->
    <link name="link_chassis">
        <inertial>
            <mass value="10" />
            <origin xyz="0 0 0.3" rpy="0 0 0" />
            <inertia ixx="1.5417" ixy="0" ixz="0" iyy="3.467" iyz="0" izz="4.742" />
        </inertial>

        <collision>
            <geometry>
                <mesh filename="package://robot_description/meshes/chassis.stl" />
            </geometry>
        </collision>

        <visual>
            <geometry>
                <mesh filename="package://robot_description/meshes/chassis.stl" />
            </geometry>
            <material name="Blue">
                <color rgba="0 0 1 1" />
            </material>
        </visual>
    </link>
<!-- Joint - chassis / left wheel -->
<joint name="joint_chassis_left_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.5 0.65 0" />
    <child link="link_left_wheel" />
    <parent link="link_chassis" />
    <axis rpy="0 0 0" xyz="0 1 0" />
    <limit effort="10000" velocity="1000" />
    <joint_properties damping="1.0" friction="1.0" />
</joint>

<!-- Link - left wheel -->
<link name="link_left_wheel">
    <inertial>
        <mass value="1" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
    </inertial>

    <collision>
        <origin rpy="1.5707 0 0" xyz="0 0.18 0" />
        <geometry>
            <mesh filename="package://robot_description/meshes/wheel.stl"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="1.5707 0 0" xyz="0 0.18 0" />
        <geometry>
            <mesh filename="package://robot_description/meshes/wheel.stl"/>
        </geometry>
        <material name="black">
            <color rgba="0 0 0 1" />
        </material>  
    </visual>

    <collision>
        <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
        <geometry>
            <cylinder length="0.12" radius="0.08"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="1.5707 0 0" xyz="0 0.06 0" />
        <geometry>
            <cylinder length="0.16" radius="0.08"/>
        </geometry>
        <material name="white">
            <color rgba="1 1 1 1" />
        </material>  
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 0.17 0"/>
        <geometry>
            <box size="0.05 0.1 0.6"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="0 0 0" xyz="0 0.17 0"/>
        <geometry>
           <box size="0.05 0.10 0.6"/>
        </geometry>  
        <material name="white">
            <color rgba="1 1 1 1" />
        </material>            
    </visual>
</link>

<!-- Joint - chassis / right wheel -->
<joint name="joint_chassis_right_wheel" type="continuous">
    <origin rpy="0 0 0" xyz="-0.5 -0.65 0" />
    <child link="link_right_wheel" />
    <parent link="link_chassis" />
    <axis rpy="0 0 0" xyz="0 1 0" />
   <limit effort="10000" velocity="1000" />
    <joint_properties damping="1.0" friction="1.0" /> 
</joint>

<!-- Link - right wheel -->
<link name="link_right_wheel">
    <inertial>
        <mass value="1" />
        <origin xyz="0 0 0" rpy="0 0 0" />
        <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
    </inertial>

    <collision>
        <origin rpy="1.5707 0 0" xyz="0 -0.18 0" />
        <geometry>
            <mesh filename="package://robot_description/meshes/wheel.stl"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="1.5707 0 0" xyz="0 -0.18 0" />
        <geometry>
            <mesh filename="package://robot_description/meshes/wheel.stl"/>
        </geometry>
        <material name="black">
               <color rgba="0 0 0 1" />
        </material>   
    </visual>

    <collision>
        <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
        <geometry>
            <cylinder length="0.18" radius="0.08"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="1.5707 0 0" xyz="0 -0.06 0" />
        <geometry>
            <cylinder length="0.18" radius="0.08"/>
        </geometry>
        <material name="white">
            <color rgba="1 1 1 1" />
        </material>  
    </visual>
    <collision>
        <origin rpy="0 0 0" xyz="0 -0.17 0"/>
        <geometry>
            <box size="0.05 0.1 0.6"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="0 0 0" xyz="0 -0.17 0"/>
        <geometry>
           <box size="0.05 0.10 0.6"/>
        </geometry> 
        <material name="white">
            <color rgba="1 1 1 1" />
        </material>     
    </visual>
</link>

<!-- joint chassis/caster wheel -->
<joint name="joint_chassis_caster_wheel" type="fixed">
    <origin rpy="0 0 0" xyz="0.75 0 -0.15"/>
    <child link="link_caster_wheel"/>
    <parent link="link_chassis"/>
    <axis rpy="0 0 0" xyz="1 1 1"/>
    <limit effort="10000" velocity="1000" />
    <joint_properties damping="1.0" friction="1.0" /> 
</joint>

<!-- link caster wheel -->
<link name="link_caster_wheel">
    <inertial>
        <mass value="0.5"/>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <inertia ixx="0.002526666666667" ixy="0" ixz="0" iyy="0.002526666666667" iyz="0" izz="0.005"/>
    </inertial>

    <collision>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.25"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 0"/>
        <geometry>
            <sphere radius="0.25"/>
        </geometry>  
        <material name="blue">
                <color rgba="0 0 1 1" />
        </material>            
    </visual>    

<collision>
        <origin rpy="0 0 0" xyz="0 0 -0.156"/>
        <geometry>
            <sphere radius="0.125"/>
        </geometry>
    </collision>
    <visual>
        <origin rpy="0 0 0" xyz="0 0 -0.156"/>
        <geometry>
            <sphere radius="0.125"/>
        </geometry>  
        <material name="white">
            <color rgba="1 1 1 1" />
        </material>  
    </visual>    
</link>
</robot>

